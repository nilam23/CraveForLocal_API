<%- include("../partials/header") %>
    <%- include("../partials/heading") %>
        <%- include("../partials/navbar") %>


            <% if(message){ %>
                <div class="alert alert-<%=message.type%> alert-dismissible" role="alert" style="text-align: center;">
                    <strong>
                        <%=message.content%>
                    </strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                </div>
                <% } %>

                    <div class="container">
                        <div id="shadow-box" class="details-container">
                            <div class="row">
                                <div class="col-lg-4 col-md-6 col-sm-12">
                                    <div class="details-img">
                                        <img class="product-img" id="shadow-box" src="data:image/<%=item.image.contentType%>;base64,
                                <%=item.image.data.toString('base64')%>" alt="<%= item.title %>">
                                    </div>
                                </div>
                                <div class="col-lg-8 col-md-6 col-sm-12">
                                    <div class="details-info">
                                        <h3 id="details-item-name"><small class="text-muted"><b>
                                                    <%= item.title %>
                                                </b></small></h3>
                                        <h4 id="details-item-name"><small class="text-muted"><i>
                                                    <%= item.description %>
                                                </i></small></h4>
                                        <h3><small class="text-muted">â‚¹ <%= item.price %></small></h3>
                                        <form action="/<%= item._id %>/addtocart" method="POST">
                                            <input type="number" name="quantity" placeholder="Qty" min="1"
                                                max="<%= item.countInStock %>">
                                            <button class="btn btn-warning btn-sm">Add to cart</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <a class="btn btn-primary btn-lg" href="/home">GO BACK TO HOME</a>
                    </div>

                    <%- include("../partials/footer") %>