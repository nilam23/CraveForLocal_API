<%- include("../partials/header") %>
    <%- include("../partials/heading") %>

        <% if(message){ %>
            <div class="alert alert-<%=message.type%> alert-dismissible" role="alert" style="text-align: center;">
                <strong>
                    <%=message.content%>
                </strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
            </div>
            <% } %>

                <h1 class="portal" style="margin-top: 30px;"><small class="text-muted"><b>MANAGE YOUR
                            WISHLIST</b></small>
                </h1>
                <% if(items.length){ %>
                    <div class="container">
                        <div class="row">
                            <% items.forEach(item=> { %>
                                <div id="card-container" class="col-lg-3 col-md-4 col-sm-6 col-6">
                                    <div id="shadow-box" class="card-content">
                                        <img id="shadow-box" class="card-img" src="data:image/<%=item.image.contentType%>;base64,
                        <%=item.image.data.toString('base64')%>" alt="<%= item.title %>">
                                        <hr>
                                        <h5 id="card-item-name" class="text-center"><small class="text-muted"><b>
                                                    <%= item.title %>
                                                </b></small>
                                        </h5>
                                        <h4 class="text-center"><small class="text-muted">â‚¹ <%= item.price %>
                                            </small></h4>
                                        <div id="outer">
                                            <form class="inner" action="/wishlist/<%= item._id %>/remove" method="POST">
                                                <button class="btn btn-danger btn-sm">Remove</button>
                                            </form>
                                            <a class="btn btn-info btn-sm inner" href="/<%= item._id %>/seemore">See
                                                more</a>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                    <% } else{ %>
                        <div id="shadow-box" class="confirmation">
                            <h5>Team Crave For Local</h5>
                            <hr>
                            <p>Your wishlist is empty. Please add something.</p>
                        </div>
                        <% } %>
                            <br>
                            <div class="text-center">
                                <a class="btn btn-primary btn-lg" href="/">GO BACK TO HOME</a>
                            </div>

                            <%- include("../partials/footer") %>