<%- include("../partials/header") %>
    <%- include("../partials/heading") %>

        <% if(message){ %>
            <div class="alert alert-<%=message.type%> alert-dismissible" role="alert" style="text-align: center;">
                <strong>
                    <%=message.content%>
                </strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
            </div>
            <% } %>

                <br>
                <% if(!items.length){ %>
                    <div id="shadow-box" class="confirmation">
                        <h5>Team Crave For Local</h5>
                        <hr>
                        <p>No item to be displayed on this category.</p>
                    </div>
                    <% }else{ %>
                        <h2 class="portal"><small class="text-muted"><b>View your products</b></small></h2>
                        <div class="container">
                            <div class="row">
                                <% items.forEach( item=> { %>
                                    <div id="card-container" class="col-lg-3 col-md-4 col-sm-6 col-6">
                                        <div id="shadow-box" class="card-content">
                                            <img id="shadow-box" class="card-img" src="data:image/<%=item.image.contentType%>;base64,
                        <%=item.image.data.toString('base64')%>" alt="<%= item.title %>">
                                            <hr>
                                            <h5 id="product-name" class="text-center"><small class="text-muted"><b>
                                                        <%= item.title %>
                                                    </b></small>
                                            </h5>
                                            <h4 id="product-price" class="text-center"><small class="text-muted">â‚¹<%=
                                                        item.price %></small>
                                            </h4>
                                            <% if(!item.countInStock){ %>
                                                <h6 id="out-of-stock" class="text-center"><i>Out of stock</i></h6>
                                                <% }else{ %>
                                                    <h6 class="text-center"><small class="text-muted">Quantity: <b>
                                                                <%= item.countInStock %>
                                                            </b></small>
                                                    </h6>
                                                    <% } %>
                                                        <div id="outer">
                                                            <div class="inner"><a id="v-btn"
                                                                    class="btn btn-warning btn-sm"
                                                                    href="/vendor/products/<%= item._id %>/edit">Edit</a>
                                                            </div>
                                                            <form class="inner"
                                                                action="/vendor/products/<%= item._id %>/delete"
                                                                method="POST">
                                                                <button id="v-btn"
                                                                    class="btn btn-danger btn-sm">Delete</button>
                                                            </form>
                                                        </div>
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>
                        <% } %>
                            <br>
                            <hr>
                            <div class="av-text-center">
                                <a class="btn btn-primary btn-lg" href="/vendor/products">GO BACK</a>
                            </div>