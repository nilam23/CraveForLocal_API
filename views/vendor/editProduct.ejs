<%- include("../partials/header") %>
    <%- include("../partials/heading") %>

        <% if(message){ %>
            <div class="alert alert-<%=message.type%> alert-dismissible" role="alert" style="text-align: center;">
                <strong>
                    <%=message.content%>
                </strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
            </div>
            <% } %>

                <br>
                <div class="signup-form">
                    <form action="/vendor/products/<%= item._id %>/edit" method="POST" enctype="multipart/form-data">
                        <h2 style="text-align: center;"><small class="text-muted"><b>Edit your product</b></small></h2>
                        <hr>
                        <div class="form-group">
                            <input type="text" class="form-control" id="title" name="title" value="<%= item.title %>">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="description" name="description"
                                value="<%= item.description %>">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="category" name="category"
                                value="<%= item.category %>">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" id="price" name="price" value="<%= item.price %>">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" id="quantity" name="quantity"
                                value="<%= item.countInStock %>">
                        </div>
                        <div id="item-img" class="form-group">
                            <label for="image">Product Image </label>
                            <img id="shadow-box" class="card-img" src="data:image/<%=item.image.contentType%>;base64,
                        <%=item.image.data.toString('base64')%>" alt="<%= item.title %>" style="width: 50%;">
                        </div>
                        <div id="item-img" class="form-group">
                            <label for="image">Change Image</label>
                            <input type="file" class="form-control" id="image" name="image" value="">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">Save update</button>
                        </div>
                    </form>
                </div>
                <div class="av-text-center">
                    <a class="btn btn-primary btn-lg" href="/vendor/products/<%= item.category %>">GO BACK</a>
                </div>