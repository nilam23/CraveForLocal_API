<%- include("../partials/header") %>
    <%- include("../partials/heading") %>

        <% if(message){ %>
            <div class="alert alert-<%=message.type%> alert-dismissible" role="alert" style="text-align: center;">
                <strong>
                    <%=message.content%>
                </strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
            </div>
            <% } %>

                <br>
                <div class="signup-form">
                    <form action="/vendor/addproduct" method="POST" enctype="multipart/form-data">
                        <h2 style="text-align: center;"><small class="text-muted"><b>Add new product</b></small></h2>
                        <hr>
                        <div class="form-group">
                            <input type="text" class="form-control" id="title" name="title" placeholder="Product name"
                                required="required">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="description" name="description"
                                placeholder="Product description" required="required">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="category" name="category"
                                placeholder="Product category" required="required">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" id="price" name="price" placeholder="Price"
                                required="required">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" id="quantity" name="quantity"
                                placeholder="Quantity" required="required">
                        </div>
                        <div id="item-img" class="form-group">
                            <label for="image">Upload Image</label>
                            <input type="file" class="form-control" id="image" name="image" value="" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">Add product</button>
                        </div>
                    </form>
                </div>
                <div class="av-text-center">
                    <a class="btn btn-primary btn-lg" href="/vendor">GO BACK</a>
                </div>