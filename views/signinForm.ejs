<%- include("./partials/header") %>
    <%- include("./partials/heading") %>

        <% if(message){ %>
            <div class="alert alert-<%=message.type%> alert-dismissible" role="alert" style="text-align: center;">
                <strong>
                    <%=message.content%>
                </strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
            </div>
            <% } %>

                <div class="signup-form">
                    <form action="/signin" method="POST">
                        <h2 style="text-align: center;"><small class="text-muted"><b>Please sign in</b></small></h2>
                        <hr>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Your email"
                                required="required">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Your password"
                                required="required">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">Sign In</button>
                        </div>
                    </form>
                </div>
                <div class="text-center">
                    <h6>Forgot your password? Please, <a href="/forgotpassword">click here.</a></h6>
                    <h6>Don't have an account? Please, <a href="/signup">sign up.</a></h6>
                    <br>
                    <a class="btn btn-primary btn-lg" href="/">GO BACK TO HOME</a>
                    <br>
                    <br>
                </div>